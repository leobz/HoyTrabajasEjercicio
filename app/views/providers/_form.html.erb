<%= form_with(model: provider, class: "resource-form centered-15") do |form| %>
  <h2><%= "#{t(action)} #{t(:provider)}"%></h2>

  <% if provider.errors.any? %>
    <div style="color: red">
      <h2><%= t(:something_went_wrong)%></h2>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :nit, style: "display: block" %>
    <%= form.text_field :nit %>
  </div>

  <div>
    <%= form.label :contact_name, style: "display: block" %>
    <%= form.text_field :contact_name %>
  </div>

  <div>
    <%= form.label :contact_phone, style: "display: block" %>
    <%= form.text_field :contact_phone %>
  </div>

  <div>
    <%= form.label :bank_name, style: "display: block" %>
    <%= form.select :bank_id, options_for_select(Bank.all.map { |bank| [bank.name, bank.id] }, provider.bank_id) , {prompt: true} %>
  </div>


  <div>
    <%= form.label :account_number, style: "display: block" %>
    <%= form.text_field :account_number %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary active" %>
  </div>

  <div>
    <% if action == :edit %>
      <%= link_to t(:show), @provider %> |
    <% end %>
    <%= link_to t(:back), providers_path %>
  </div>
<% end %>