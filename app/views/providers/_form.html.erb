<%= form_with(model: provider) do |form| %>
  <% if provider.errors.any? %>
    <div style="color: red">
      <h2><%= t(:something_went_wrong)%></h2>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :contact_name, style: "display: block" %>
    <%= form.text_field :contact_name %>
  </div>

  <div>
    <%= form.label :contact_phone, style: "display: block" %>
    <%= form.text_field :contact_phone %>
  </div>

  <div>
    <%= form.label :bank, style: "display: block" %>
    <%= form.text_field :bank_id %>
  </div>

  <div>
    <%= form.label :nit, style: "display: block" %>
    <%= form.text_field :nit %>
  </div>

  <div>
    <%= form.label :account_number, style: "display: block" %>
    <%= form.text_field :account_number %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
