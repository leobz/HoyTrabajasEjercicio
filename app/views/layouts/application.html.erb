<% presenter = ApplicationPresenter.new(self) %>

<!DOCTYPE html>
<html>
  <head>
    <title>Hoy Trabajas</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!------------------------------------- Boostrap CSS  ---------------------------------------->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!------------------------------------- Awesome Icons  ---------------------------------------->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <!------------------------------------- Boostrap JS  ---------------------------------------->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>


    <% if user_signed_in? %>
      <!----------------------------- Navbar  -------------------------------->
      <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
        <div class="container-fluid col-xxl-10 col-xl-10 col-lg-10 col-md-11 col-sm-12">
          <a class="navbar-brand" href="/">Hoy Trabajas</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/providers"><%= t(:providers)%></a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/banks"><%= t(:banks)%></a>
              </li>
            </ul>
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <%= link_to t(:log_out), destroy_user_session_path, data: {turbo_method: :delete} %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <% end %>


    <!----------------------------- Flash messages  -------------------------------->
    <% presenter.flash_messages %>

    <!----------------------------- Yield content  -------------------------------->
    <div class="row justify-content-center">
      <div class="col-xxl-10 col-xl-10 col-lg-10 col-md-11 col-sm-12">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
