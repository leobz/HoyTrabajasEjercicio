<%= form_with(model: bank) do |form| %>
  <% if bank.errors.any? %>
    <div style="color: red">
      <h2><%= t(:something_went_wrong)%></h2>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
