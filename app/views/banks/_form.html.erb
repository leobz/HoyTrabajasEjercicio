<%= form_with(model: bank, class: "resource-form centered-15") do |form| %>
  <h2><%= "#{t(action)} #{t(:bank)}"%></h2>

  <% if bank.errors.any? %>
    <div style="color: red">
      <h2><%= t(:something_went_wrong)%></h2>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary active" %>
  </div>

  <div>
    <% if action == :edit %>
      <%= link_to t(:show), @bank %> |
    <% end %>
    <%= link_to t(:back), banks_path %>
  </div>
<% end %>
